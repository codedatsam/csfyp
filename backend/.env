# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=5000

# ==========================================
# DATABASE - PostgreSQL on Supabase
# ==========================================
# Get this from Supabase Dashboard → Settings → Database → Connection String (URI)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# Generate strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_change_in_production_min_32_characters_long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_different_from_above
JWT_REFRESH_EXPIRE=30d

# ==========================================
# PAYPAL CONFIGURATION
# ==========================================
# Get from: https://developer.paypal.com/dashboard
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id_from_dashboard
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_from_dashboard

# ==========================================
# EMAIL - SendGrid
# ==========================================
# Get from: https://sendgrid.com/
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@hustleflow.com
SENDGRID_FROM_NAME=Hustleflow

# ==========================================
# SMS - Twilio
# ==========================================
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# AI - OpenAI
# ==========================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4

# ==========================================
# FRONTEND
# ==========================================
FRONTEND_URL=http://localhost:3000

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100